<dialog class="modal" x-data="modal" :open="$data.isModalOpen">
  <div class="modal-box">
    <h3 class="font-bold text-lg">提示</h3>
    <p class="py-4">敬请期待</p>
    <div class="modal-action">
      <form method="dialog">
        <!-- if there is a button in form, it will close the modal -->
        <button class="btn" @click="$data.isModalOpen=false">关闭</button>
      </form>
    </div>
  </div>
</dialog>